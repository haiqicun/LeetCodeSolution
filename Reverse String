class Solution {
    public void reverseString(char[] s) {
        if (s == null || s.length < 2) return;
        int len = s.length;
        int mid = (len - 1)/2;
        for (int i = 0; i < (len - 1)/2 + 1; i++) {
            char temp = s[len-1-i];
            s[len-1-i] = s[i];
            s[i] = temp;
        }
    }
}
